@using WebUF.ViewModel
@model EstadoViewModel
@* Views/Shared/_ModalDescricao.cshtml *@
@* 
  Partial tipado: recebe um EstadoViewModel.
  Quando chamado via AJAX o servidor renderiza esse HTML já preenchido
  e o front apenas injeta no DOM e abre o modal.
*@

<div class="modal fade" id="modalDescricaoCompartilhado" tabindex="-1" aria-labelledby="modalDescricaoLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        @* Título do modal; usa model se foi passado server-side *@
        <h5 class="modal-title" id="modalDescricaoLabel">@Html.Raw(Model?.Nome ?? "Descrição do Estado")</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </div>

      <div class="modal-body">
        @* Conteúdo preenchido server-side (se foi enviado model) *@
        <div class="mb-3">
          <h3 class="mb-0">@Html.Raw(Model?.Nome) <small class="text-muted">(@Html.Raw(Model?.Sigla))</small></h3>
          <small class="text-muted">ID: @Html.Raw(Model?.Id)</small>
        </div>

        <dl class="row">
          <dt class="col-sm-3">Sigla</dt>
          <dd class="col-sm-9">@Html.Raw(Model?.Sigla)</dd>

          <dt class="col-sm-3">Nome</dt>
          <dd class="col-sm-9">@Html.Raw(Model?.Nome)</dd>

          <dt class="col-sm-3">Região</dt>
          <dd class="col-sm-9">@Html.Raw(Model?.Regiao)</dd>

          <dt class="col-sm-3">Capital</dt>
          <dd class="col-sm-9">@Html.Raw(Model?.Capital)</dd>

          <dt class="col-sm-3">Descrição</dt>
          <dd class="col-sm-9">@Html.Raw(Model?.Descricao)</dd>
        </dl>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>

